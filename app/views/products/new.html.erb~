<p class=header>New Product</p>

<%= form_for @product do |product| %>
  <% if @product.errors.any? %> 
    <div class="error_messages"> 
      <h2>Form is invalid</h2> 
      <ul> 
        <% for message in @product.errors.full_messages %> 
          <li><%= message %></li> 
        <% end %> 
      </ul> 
    </div> 
  <% end %> 
<table>
  <tr>
    <td><%= product.label :name %></td>
    <td><%= product.text_field :name %></td>
  </tr>
  <tr>
    <td><%= product.label :description %></td>
    <td><%= product.text_area :description, :rows => 4 %></td>
  </tr>
  <tr>
    <td><%= product.label :price %></td>
    <td><%= product.text_field :price, :size => 5, :maxlength => 10 %></td>
  </tr>
  <tr>
    <td><%= product.label :weight %></td>
    <td><%= product.text_field :weight, :size => 5, :maxlength => 5 %>lbs</td>
  </tr>
  <tr>
    <td><%= product.label :category_id, "Category" %></td>
    <td><%= product.select :category_id , @categories.map{|x|[x.name,x.id]} %></td>
  </tr>
</table>
<%= product.hidden_field :user_id, :value => current_user.id  %>
<%= product.submit "Add Product" %>
<% end %>
